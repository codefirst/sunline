%ul.breadcrumb
  %li
    = link_to t(:title_scripts), scripts_path
    %span.divider /
  %li
    = link_to @log.script.name, script_path(@log.script)
    %span.divider /
  %li.active= t(:title_log)

%h3= t(:title_log)

%dl.dl-horizontal

  %dt= t(:field_host)
  %dd= @log.host

  %dt= t(:field_uploaded)
  %dd= @log.formatted_created_at

  %dt= t(:field_log)
  %dd
    %pre= @log.result
