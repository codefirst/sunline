= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :host
    = f.text_field :host
  .field
    = f.label :result
    = f.text_area :result
  .field
    = f.label :script_id
    = f.number_field :script_id
  .actions
    = f.submit 'Save'
