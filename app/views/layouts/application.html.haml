!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= title(yield(:title))
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.min.css"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "https://code.jquery.com/jquery-1.11.1.min.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/js/bootstrap.min.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap-tooltip.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.6/clipboard.min.js"
    = javascript_include_tag "https://use.fontawesome.com/releases/v5.7.2/js/all.js"
    = javascript_include_tag "application"



  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          = link_to image_tag(asset_path('sunline-logo-white.png')), {controller: 'top'}, class: 'brand'
          .nav-collapse
          - if user_signed_in?
            %ul.nav
              %li= link_to t(:title_scripts), scripts_path
              %li= link_to t(:title_hosts), hosts_path
              %li= link_to t(:title_search), search_path
            %ul.nav.pull-right
              %li.dropdown
                %a.dropdown-toggle(data-toggle="dropdown" role="button" href="#")
                  = t(:button_account)
                  %i.fa.fa-caret-down
                %ul.dropdown-menu(role="menu")
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %i.fa.fa-sign-out-alt
                      = t(:button_sign_out)

    .container
      = bootstrap_flash_compat
      = yield

      %footer
        %p &copy; codefirst.org
