
.navbar
  .container
    %h3= t(:title_scripts)
    .pull-right
      - if params[:archived] == 'true'
        = link_to t(:link_active_scripts), scripts_path
      - else
        = link_to t(:link_archived_scripts), scripts_path(archived: true)
      = link_to t(:button_new_script), new_script_path, class: 'btn'

%table.table.table-striped
  %tr
    %th= t(:field_name)
    %th= t(:field_created_by)
    %th= t(:field_updated_by)
    %th= t(:field_last_update)

  - @scripts.each do |script|
    %tr
      %td= link_to script.name, script
      %td= script.creater_name
      %td= script.updater_name
      %td= script.formatted_updated_at
