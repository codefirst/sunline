= form_for @script do |f|
  - if @script.errors.any?
    #error_explanation
      %h2= "#{pluralize(@script.errors.count, "error")} prohibited this script from being saved:"
      %ul
        - @script.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :updated_by
    = f.number_field :updated_by
  .field
    = f.label :guid
    = f.text_field :guid
  .field
    = f.label :archived
    = f.check_box :archived
  .actions
    = f.submit 'Save'
